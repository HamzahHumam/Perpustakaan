<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="id.sch.smktelkom_mlg.tugas01.xiirpl3002.aplikasibuku.MainActivity"
        tools:ignore="PrivateResource,ScrollViewSize">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Layanan Buku"
            android:textColor="#ffffff"
            tools:ignore="HardcodedText" />

        <RadioGroup
            android:id="@+id/rgpilihan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            tools:ignore="RtlHardcoded">

            <RadioButton
                android:id="@+id/radioButtonkembali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Kembalikan"
                android:textColor="#ffffff"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:id="@+id/radioButtonpinjam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Tambah Masa Pinjam"
                android:textColor="#ffffff"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masa Pinjam"
                tools:ignore="HardcodedText" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/checkBoxbk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:checked="false"
            android:text="3 Hari"
            android:textColor="#ffffff"
            tools:ignore="HardcodedText" />

        <CheckBox
            android:id="@+id/checkBoxkm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:gravity="center_vertical"
            android:text="1 Minggu"
            android:textColor="#ffffff"
            tools:ignore="HardcodedText" />

        <CheckBox
            android:id="@+id/checkBoxmj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:checked="false"
            android:text="1 Bulan"
            android:textColor="#ffffff"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul"
            tools:ignore="HardcodedText" />

        <Spinner
            android:id="@+id/spinnerJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/Buku" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Saran dan Komentar"
                android:textColor="#ffffff"
                tools:ignore="HardcodedText" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/buttonOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textViewHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#ffffff"
            tools:text="Output" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="#ffffff"
            tools:text="Judul buku" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#ffffff"
            tools:text="Komentar dan Saran" />

    </LinearLayout>
</ScrollView>